<div class="navbar">
  <div class="navbody">
    <div class="left">
      <a class="navbar-brand" href="/">
        <%= image_tag("TheMiningCoLogo.svg") %>
      </a>
    </div>
    <div class="right">
      <% if current_user %>
        <a href="">
          {{5.23 * 768 | currency:"$USD ":0}} <small class="text-warning">5.23 ETH</small>
        </a>

        <a href="" ng-click="toggleDropdown = !toggleDropdown">
          <!-- <img src="http://www.johnson.cornell.edu/people/faculty/oh33/oh33_profile.jpg"> -->
          <span class="email"><%= current_user.email %></span> <i class="ion-arrow-down-b small"></i>
        </a>
      <% else %>
        <%= link_to new_user_session_path, class: "#{ 'active' if current_page?(new_user_session_path) }" do %>
          Login
        <% end %>
        <%= link_to new_user_registration_path, class: "pr-1 #{ 'active' if current_page?(new_user_registration_path) }" do %>
          Sign Up
        <% end %>
      <% end %>
    </div>
    <div class="clearfix"></div>
  </div>
  <% if current_user %>
  <div class="navdropdown" ng-if="toggleDropdown">
    <ul>
      <li>
        <%= link_to "Edit My Account", edit_user_registration_path %>
      </li>
      <li>
        <%= link_to "Logout", destroy_user_session_path %>
      </li>
    </ul>
  </div>
  <% end %>
</div>

